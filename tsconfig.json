{
    "compilerOptions": {
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "suppressImplicitAnyIndexErrors": true,
        "declaration": true,
        "noImplicitReturns": true,
        "strictNullChecks": true,
        "noUnusedParameters": true,
        "noEmitOnError": true
    },
    "include": [
        "./src/**/*"
    ]
}
